<table class="nice_table no_break" width="100%">
  <tr>
    <td class="states" style="width: 20%;">
    <% unless activity_with_states.states.compact.empty? %>
      <%= activity_with_states.states.sort_by{|s| s.abbreviation}.collect{|s| s.abbreviation}.join(', ') %>
    <% else %>
      N/A
    <% end %>
    </td>
    <td class="description" style="width: 80%;">
      <%= activity_with_states.description %>
    </td>
  </tr>
</table>
