<h1>Criteria</h1>

<ul>
  <% @criteria.each do |criterium| %>
    <li>
      <strong><%= criterium.number %>:</strong> 
      <%= criterium.name %> &nbsp;
      [<%= link_to 'edit', edit_criterium_path(criterium) %>]
    </li>
  <% end %>
</ul>


<% content_for(:sidebar) do %>
  <div class="span-4 last">
    <h4>Criteria Tools</h4>
    <%= link_to "Add New Criteria", new_criterium_path %>
  </div>
<% end %>
