  <% count = 1 %>
  <% @states.each do |region| %>
  <div class="span-3 <%= last_or_nil(count, 6) %>">
    <div>
      <h4><%=h region.name %></h4>
    </div>
    <% if region.states.count > 0 %>
      <% region.states.each do |state| %>
      <p><%=h state.name %></p>
      <% end %>
    <% end %>
  </div>
  <% count += 1 %>
  <% end %>

